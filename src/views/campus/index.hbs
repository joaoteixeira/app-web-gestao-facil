{{#> main}}
{{#*inline "content"}}
{{#if flashErrors}}
<div class='alert alert-danger'>
    {{#each flashErrors}}
    <p style="margin: 0; padding: 0;"> {{this}} </p>
    {{/each}}
</div>
{{/if}}
<div class="card w-100">
    <div class="card-body p-4">
        <div class="row">
            <div class="col col-10">
                <h5 class="card-title fw-semibold mb-4">Campus</h5>
            </div>
            <div class="col">
                {{!-- <a href="/campus/novo" class="btn btn-primary">
                    <i class="ti ti-plus"></i>
                    <span>Servidor</span>
                </a> --}}
            </div>
        </div>


        <div class="table-responsive">
            {{#unless campi}}
            <h4>Nenhum campus encontrada na base de dados!</h4>
            {{/unless}}
            {{#if campi}}
            <table class="table text-nowrap mb-0 align-middle">
                <thead class="text-dark fs-4">
                    <tr>
                        <th class="border-bottom-0" style="width: 1%;">
                            <h6 class="fw-semibold mb-0">#</h6>
                        </th>
                        <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">Nome</h6>
                        </th>
                        {{!-- <th class="border-bottom-0">
                            <h6 class="fw-semibold mb-0">Opções</h6>
                        </th> --}}
                    </tr>
                </thead>
                <tbody>
                    {{#each campi}}
                    <tr>
                        <td class="border-bottom-0">
                            {{inc @index}}
                        </td>
                        <td class="border-bottom-0">
                            {{this.nome}}
                        </td>
                        
                        
                        {{!-- <td class="border-bottom-0">
                            <a href="/servidores/{{this.id}}/atualizacao" class="btn btn-warning">
                                <i class="ti ti-pencil"></i>
                            </a>
                            <a href="/servidores/{{this.id}}/exclusao" class="btn btn-danger">
                                <i class="ti ti-trash"></i>
                            </a>
                        </td> --}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/if}}
        </div>
    </div>
</div>

{{/inline}}
{{/main}}